<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto">

    <data>

        <import type="com.hardy.yongbyung.foundation.Icon" />

        <variable
            name="viewModel"
            type="com.hardy.yongbyung.ui.wirtepost.WritePostViewModel" />
    </data>

    <androidx.constraintlayout.widget.ConstraintLayout
        android:id="@+id/root_layout"
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <com.hardy.yongbyung.components.YongByungTopBar
            android:id="@+id/toolbar"
            hasDivider="@{true}"
            startIcon="@{Icon.ic_back}"
            title="@{@string/write_post}"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent" />

        <ScrollView
            android:id="@+id/sv"
            android:layout_width="0dp"
            android:layout_height="0dp"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@id/toolbar">

            <androidx.constraintlayout.widget.ConstraintLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:paddingBottom="24dp">

                <androidx.constraintlayout.widget.Guideline
                    android:id="@+id/guide_start"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:orientation="vertical"
                    app:layout_constraintGuide_begin="16dp" />

                <androidx.constraintlayout.widget.Guideline
                    android:id="@+id/guide_end"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:orientation="vertical"
                    app:layout_constraintGuide_end="16dp" />

                <com.hardy.yongbyung.components.YongByungText
                    android:id="@+id/category_star_text"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="24dp"
                    android:text="@string/star"
                    android:textColor="@color/R500"
                    app:layout_constraintStart_toEndOf="@id/guide_start"
                    app:layout_constraintTop_toTopOf="parent"
                    app:typo="button" />

                <com.hardy.yongbyung.components.YongByungText
                    android:id="@+id/category_text"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:text="@string/category"
                    app:layout_constraintBottom_toBottomOf="@id/category_star_text"
                    app:layout_constraintEnd_toStartOf="@id/guide_end"
                    app:layout_constraintStart_toEndOf="@id/category_star_text"
                    app:layout_constraintTop_toTopOf="@id/category_star_text"
                    app:typo="button" />

                <LinearLayout
                    android:id="@+id/category_spinner"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="12dp"
                    android:background="@drawable/bg_border_g200_1dp_rounded_8dp"
                    android:gravity="center_vertical"
                    android:padding="12dp"
                    app:layout_constraintEnd_toStartOf="@id/guide_end"
                    app:layout_constraintStart_toEndOf="@id/guide_start"
                    app:layout_constraintTop_toBottomOf="@id/category_text">

                    <com.hardy.yongbyung.components.YongByungImageView
                        src="@{viewModel.category.drawableId}"
                        visibleOrGone="@{viewModel.category != null}"
                        android:layout_width="24dp"
                        android:layout_height="24dp"
                        android:src="@drawable/ic_football" />

                    <com.hardy.yongbyung.components.YongByungText
                        android:id="@+id/selected_category_text"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_marginStart="8dp"
                        android:layout_weight="1"
                        android:ellipsize="end"
                        android:maxLines="1"
                        android:text="@{viewModel.category == null ? `카테고리를 선택해주세요` : viewModel.category.name}"
                        android:textColor="@{viewModel.category == null ? @color/G300 : @color/G900}"
                        app:typo="caption1" />

                    <com.hardy.yongbyung.components.YongByungIcon
                        icon="@{Icon.ic_arrow_bottom}"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginStart="8dp"
                        android:tint="@{viewModel.category == null ? @color/G300 : @color/G900}" />
                </LinearLayout>

                <com.hardy.yongbyung.components.YongByungText
                    android:id="@+id/title_star_text"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="24dp"
                    android:text="@string/star"
                    android:textColor="@color/R500"
                    app:layout_constraintStart_toEndOf="@id/guide_start"
                    app:layout_constraintTop_toBottomOf="@id/category_spinner"
                    app:typo="button" />

                <com.hardy.yongbyung.components.YongByungText
                    android:id="@+id/title_text"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="@string/title"
                    android:textColor="@color/G900"
                    app:layout_constraintBottom_toBottomOf="@id/title_star_text"
                    app:layout_constraintStart_toEndOf="@id/title_star_text"
                    app:layout_constraintTop_toTopOf="@id/title_star_text"
                    app:typo="button" />

                <com.hardy.yongbyung.components.YongByungTextArea
                    android:id="@+id/title_text_field"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="12dp"
                    android:afterTextChanged="@{(title)->viewModel.onTitleTextChanged(title)}"
                    android:hint="@string/input_content"
                    android:maxLength="30"
                    android:maxLines="1"
                    android:textColor="@color/G900"
                    android:textColorHint="@color/G300"
                    app:layout_constraintEnd_toStartOf="@id/guide_end"
                    app:layout_constraintStart_toEndOf="@id/guide_start"
                    app:layout_constraintTop_toBottomOf="@id/title_text"
                    app:typo="caption1" />


                <com.hardy.yongbyung.components.YongByungText
                    android:id="@+id/content_star_text"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="24dp"
                    android:text="@string/star"
                    android:textColor="@color/R500"
                    app:layout_constraintStart_toEndOf="@id/guide_start"
                    app:layout_constraintTop_toBottomOf="@id/title_text_field"
                    app:typo="button" />

                <com.hardy.yongbyung.components.YongByungText
                    android:id="@+id/content_text"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:text="@string/content"
                    android:textColor="@color/G900"
                    app:layout_constraintBottom_toBottomOf="@id/content_star_text"
                    app:layout_constraintEnd_toStartOf="@id/guide_end"
                    app:layout_constraintStart_toEndOf="@id/content_star_text"
                    app:layout_constraintTop_toTopOf="@id/content_star_text"
                    app:typo="button" />

                <com.hardy.yongbyung.components.YongByungTextArea
                    android:id="@+id/content_text_field"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="16dp"
                    android:afterTextChanged="@{(content)->viewModel.onContentTextChanged(content)}"
                    android:hint="@string/input_content"
                    android:lines="5"
                    app:layout_constraintEnd_toStartOf="@id/guide_end"
                    app:layout_constraintStart_toEndOf="@id/guide_start"
                    app:layout_constraintTop_toBottomOf="@id/content_text"
                    app:typo="caption1" />

                <com.hardy.yongbyung.components.YongByungText
                    android:id="@+id/date_star_text"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="24dp"
                    android:text="@string/star"
                    android:textColor="@color/R500"
                    app:layout_constraintStart_toEndOf="@id/guide_start"
                    app:layout_constraintTop_toBottomOf="@id/content_text_field"
                    app:typo="button" />

                <com.hardy.yongbyung.components.YongByungText
                    android:id="@+id/date_text"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:text="@string/date"
                    app:layout_constraintBottom_toBottomOf="@id/date_star_text"
                    app:layout_constraintEnd_toStartOf="@id/guide_end"
                    app:layout_constraintStart_toEndOf="@id/date_star_text"
                    app:layout_constraintTop_toTopOf="@id/date_star_text"
                    app:typo="button" />

                <LinearLayout
                    android:id="@+id/date_spinner"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:background="@drawable/bg_underline_g200_2dp"
                    android:gravity="center_vertical"
                    android:padding="12dp"
                    app:layout_constraintEnd_toStartOf="@id/guide_end"
                    app:layout_constraintStart_toEndOf="@id/guide_start"
                    app:layout_constraintTop_toBottomOf="@id/date_text">

                    <com.hardy.yongbyung.components.YongByungText
                        android:id="@+id/selected_date_text"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_marginStart="8dp"
                        android:layout_weight="1"
                        android:ellipsize="end"
                        android:maxLines="1"
                        android:text="@{viewModel.date == null ? @string/date : viewModel.date.first}"
                        android:textColor="@{viewModel.date == null ? @color/G300 : @color/G900}"
                        app:typo="caption1" />

                    <com.hardy.yongbyung.components.YongByungIcon
                        icon="@{Icon.ic_arrow_bottom}"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginStart="8dp"
                        android:tint="@{viewModel.date == null ? @color/G300 : @color/G900}" />
                </LinearLayout>

                <com.hardy.yongbyung.components.YongByungText
                    android:id="@+id/date_region_text"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="24dp"
                    android:text="@string/star"
                    android:textColor="@color/R500"
                    app:layout_constraintStart_toEndOf="@id/guide_start"
                    app:layout_constraintTop_toBottomOf="@id/date_spinner"
                    app:typo="button" />

                <com.hardy.yongbyung.components.YongByungText
                    android:id="@+id/region_text"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:text="@string/region"
                    app:layout_constraintBottom_toBottomOf="@id/date_region_text"
                    app:layout_constraintEnd_toStartOf="@id/guide_end"
                    app:layout_constraintStart_toEndOf="@id/date_region_text"
                    app:layout_constraintTop_toTopOf="@id/date_region_text"
                    app:typo="button" />

                <LinearLayout
                    android:id="@+id/region_spinner"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:background="@drawable/bg_underline_g200_2dp"
                    android:gravity="center_vertical"
                    android:padding="12dp"
                    app:layout_constraintEnd_toStartOf="@id/guide_end"
                    app:layout_constraintStart_toEndOf="@id/guide_start"
                    app:layout_constraintTop_toBottomOf="@id/region_text">

                    <com.hardy.yongbyung.components.YongByungText
                        android:id="@+id/selected_region_text"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_marginStart="8dp"
                        android:layout_weight="1"
                        android:ellipsize="end"
                        android:maxLines="1"
                        android:text="@{viewModel.selectedSubRegion == null ? @string/region : viewModel.selectedMainRegion + ` ` + viewModel.selectedSubRegion}"
                        android:textColor="@{viewModel.selectedSubRegion == null ? @color/G300 : @color/G900}"
                        app:typo="caption1" />

                    <com.hardy.yongbyung.components.YongByungIcon
                        icon="@{Icon.ic_arrow_bottom}"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginStart="8dp"
                        android:tint="@{viewModel.selectedSubRegion == null ? @color/G300 : @color/G900}" />
                </LinearLayout>

                <com.hardy.yongbyung.components.YongByungText
                    android:id="@+id/location_text"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="24dp"
                    android:text="@string/location"
                    app:layout_constraintEnd_toStartOf="@id/guide_end"
                    app:layout_constraintStart_toEndOf="@id/guide_start"
                    app:layout_constraintTop_toBottomOf="@id/region_spinner"
                    app:typo="button" />

                <com.hardy.yongbyung.components.YongByungPlainTextField
                    android:id="@+id/location_text_field"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:afterTextChanged="@{(location)->viewModel.onLocationTextChanged(location)}"
                    android:hint="@string/input_location"
                    app:layout_constraintEnd_toStartOf="@id/guide_end"
                    app:layout_constraintStart_toEndOf="@id/guide_start"
                    app:layout_constraintTop_toBottomOf="@id/location_text" />

                <com.hardy.yongbyung.components.YongByungBoxButton
                    android:id="@+id/confirm_button"
                    isDisabled="@{viewModel.category == null || viewModel.title.empty || viewModel.content.empty || viewModel.date == null || viewModel.selectedMainRegion == null || viewModel.selectedSubRegion == null}"
                    isLoading="@{viewModel.writeLoading}"
                    loadingColor="@{@color/white}"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="16dp"
                    android:text="@{@string/confirm}"
                    app:layout_constraintEnd_toStartOf="@id/guide_end"
                    app:layout_constraintStart_toEndOf="@id/guide_start"
                    app:layout_constraintTop_toBottomOf="@id/location_text_field" />

            </androidx.constraintlayout.widget.ConstraintLayout>
        </ScrollView>

    </androidx.constraintlayout.widget.ConstraintLayout>
</layout>
